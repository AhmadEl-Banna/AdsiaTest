.navbar-collapse.collapse(ng-controller="navbarLoginCtrl")
   form.navbar-form.navbar-right(role='form',ng-hide="identity.isAuthenticated()")
      .form-group
         input.form-control(type='text', placeholder='Email', ng-model="userName")
      .form-group
         input.form-control(type='password', placeholder='Password',ng-model="password")
      button.btn.btn-success(ng-click="signin(userName,password)") Sign in
   ul.nav.navbar-nav.navbar-right(ng-show="identity.isAuthenticated()")
      li.dropdown
         a.dropdown-toggle(href="", data-toggle="dropdown")
            | {{identity.currentUser.firstName + " " + identity.currentUser.lastName}}
            b.caret
         ul.dropdown-menu
            li(ng-show="identity.currentUser.isAdmin()")
               a(href="/admin/users") User Admin
            li
               a(href="", ng-click="logout()") Sign Out
