section(data-ng-controller='ArticlesController', data-ng-init='findOne()')
   div.page-header
      h1(data-ng-bind='article.title')
   div.pull-right(data-ng-show='authentication.currentUser._id == article.user._id')
      a.btn.btn-primary(href='/#/articles/{{article._id}}/edit')
         i.glyphicon.glyphicon-edit
      a.btn.btn-primary(data-ng-click='remove();')
         i.glyphicon.glyphicon-trash
   small
      em.text-muted
         | Posted on
         span(data-ng-bind='article.created | date:"mediumDate"')
         | by
         span(data-ng-bind='article.user.userName')
   p.lead(data-ng-bind='article.content')